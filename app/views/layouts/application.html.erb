	<header>
	    <div class="topBar">
	      <img src="/assets/logoOption2.png">
	      <ul class="loginAndCartHeader">
	        <li><a href="#">Login</a></li>
	        <li><img src="/assets/cartIcon.png"> <a href="#">Cart</a></li>
	      </ul>
