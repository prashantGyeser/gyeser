<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "devise", :media => "all" %>
<% end %>


<div id="login">
	<h2>Sign in</h2>

	<%= devise_error_messages! %>

	<ul id="form_error">

	</ul>
	


	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email %></div>

	  <div><%= f.label :password %><br />
	  <%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in", :id => "sign_in", :class => "awesome large blue" %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>

<% content_for :javascript do %>
	
	<script type="text/javascript">
		jQuery(document).ready(function(e) {

			// Stuff to do as soon as the DOM is ready. Use $() w/o colliding with other libs;
			// Check if the email or password field is empty
			$('form').submit(function(form){
				if ($('#user_email').val() == "") {
					form.preventDefault();
					$('#user_email').addClass('error');
					$('#form_error').append("<li>You cannot leave your email id blank</li>")
				};
				if ($('#user_password').val() == "") {
					form.preventDefault();
					$('#user_password').addClass('error');
					$('#form_error').append("<li>You cannot leave your password blank</li>")
				};
			});
		});
	</script>

<% end %>